@model IList<JensensWebApp.Models.Article>

@{
    ViewBag.Title = "Articles";

    Dictionary<string, string> topicDisplayNames = new Dictionary<string, string>
{
    {"Halsa", "Hälsa"},
    {"SamhalleKonflikter", "Samhälle och Konflikter"},
    {"Miljo", "Miljö"},
    {"VetenskapTeknik", "Vetenskap och Teknik"},
    {"LivsstillFritt", "Livsstil och Fritid"},
    {"Ekonomi", "Ekonomi"},
    {"Religion", "Religion"},
    {"Idrott", "Idrott"}
};

}

<div class="container-fluid">
    
    <div class="row">
        <div class="col-sm-3">
            <div class="card weather-card">
                <div class="weather-search">
                    <input class="search-input" type="text" id="search-input" placeholder="Sök på en stad" />
                    <button class="search-btn" id="search-button"><img class="search-btn-img" src="~/Images/search.png"></button>
                </div>
                
                <div id="error-message"></div>
                <div>
                    <img id="icon" class="weather-main-icon" src="/Images/mist.png" />
                    <p class="weather-desc" id="weatherdesc"></p>
                    <h2 class="weather-city" lang="sv" id="stad"></h2>
                     
                    
                     <div class="details">
                        <div class="col">
                            <h1 class="weather-temp" id="temp"> </h1>
                        </div>
                    </div>

                    <div class="SecondDetails">
                        <div class="col">
                            <div>
                                <p>Luftfuktighet:</p>
                                <p class="humidity" id="humidity"></p>
                            </div>
                        </div>
                        <div class="col">
                            <div>
                                <p>Vind:</p>
                                <p class="wind" id="wind"></p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


        <div class="col-sm-6">
        @foreach (var article in Model)
        {
            <div class="mb-4">
                <div class="card py-1">
                    <div class="card-body ">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Summary</p>
                        <a href="@article.Link" class="card-link" target="_blank"></a>
                        <div class="d-flex justify-content-between align-items-baseline">
                            <small class="text-muted">@article.Published.ToString("yyyy-MM-dd HH:mm:ss")</small>
                            <span class="card-topic text-right">@article.Topic.FirstOrDefault()</span>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
        <div class="col-sm-3">
            
        </div>
    </div> 
</div>
