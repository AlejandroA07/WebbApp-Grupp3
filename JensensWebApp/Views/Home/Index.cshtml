@model IList<JensensWebApp.Models.Article>

@{
    ViewBag.Title = "Articles";

    Dictionary<string, string> topicDisplayNames = new Dictionary<string, string>
{
    {"Halsa", "Hälsa"},
    {"SamhalleKonflikter", "Samhälle och Konflikter"},
    {"Miljo", "Miljö"},
    {"VetenskapTeknik", "Vetenskap och Teknik"},
    {"LivsstillFritt", "Livsstil och Fritid"},
    {"Ekonomi", "Ekonomi"},
    {"Religion", "Religion"},
    {"Idrott", "Idrott"}
};

}

<div class="container-fluid">
    
    <div class="row">
        <div class="col-sm-3">
            <div class="box-weather card">
                <div class="col">
                    <div class="icon1-weather-box ">
                        <img src="https://icons.iconarchive.com/icons/icontexto/search/128/search-grey-icon.png" width="36" height="36">
                        <h2>Malmö</h2>
                    </div>
                    <hr class=" hr-weather-box">
                    <div class="icon2-weather-box ">
                        <img src="https://icons.iconarchive.com/icons/oxygen-icons.org/oxygen/128/Status-weather-clear-icon.png" width="64" height="64">
                        <h2> 25°C</h2>
                    </div>
                    <hr class=" hr-weather-box">
                    <div class=" fullrapport-weather ">
                        <p>Veckorapport</p>
                    </div>
                    
                </div>
                
            </div>
        </div>
        <div class="col-sm-6">
        @foreach (var article in Model)
        {
            <div class="mb-4">
                <div class="card py-1">
                    <div class="card-body ">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Summary</p>
                        <a href="@article.Link" class="card-link" target="_blank"></a>
                        <p class="card-text"><small class="text-muted">@article.Published.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
                    </div>
                </div>
            </div>
        }
        </div>
        <div class="col-sm-3">
           
        </div>
    </div> 
</div>
